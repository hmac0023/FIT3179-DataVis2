{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Distribution of physical activity done by Australians (2022)",
    "description": "Distribution of physical activity done by Australians in 2022",
    "width": 1000,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/hmac0023/FIT3179-DataVis2/refs/heads/main/exercise.csv" 
    },
    "transform": [
      {
        "window": [{"op": "sum", "field": "Estimates", "as": "TotalEstimates"}], 
        "frame": [null, null]
      },
      {
        "calculate": "datum.Estimates / datum.TotalEstimates * 100", 
        "as": "Percentage"
      }
    ],
    "mark": "arc",
    "encoding": {
      "theta": {"field": "Estimates", "type": "quantitative"},
      "color": {
        "field": "Amount Of Exercise", 
        "type": "nominal",
        "legend": {"title": "2014 Physical Activity Guideline"}
      },
      "tooltip": [
        {"field": "Amount Of Exercise", "type": "nominal", "title": "2014 Physical Activity Guideline"},
        {"field": "Estimates", "type": "quantitative", "title": "Estimate"},
        {"field": "Percentage", "type": "quantitative", "format": ".1f", "title": "Percentage"}
      ]
    }
  }
  